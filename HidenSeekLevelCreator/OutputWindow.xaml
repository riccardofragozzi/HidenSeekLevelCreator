<Window x:Class="HidenSeekLevelCreator.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HidenSeekLevelCreator"
        mc:Ignorable="d"
        Title="XML Output" Height="450" Width="347" ResizeMode="NoResize" ShowInTaskbar="False" Icon="/icon.ico">
    <Grid Background="#FF191919">
        <Grid VerticalAlignment="Top" Height="30" Background="#FFB0B0B0">
            <Button x:Name="clearBtn" Content="Pulisci" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="91" Click="clearBtn_Click" />
            <Button x:Name="copyOutputBtn" Content="Copia output" HorizontalAlignment="Left" Margin="106,5,0,0" VerticalAlignment="Top" Width="91" Click="copyOutputBtn_Click" />
        </Grid>
        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="txtOut" Background="#FF191919" Foreground="#FFC3C3C3"/>
        </ScrollViewer>
        <Label x:Name="instructionLbl" Content="Label" HorizontalAlignment="Stretch" Margin="0,30,0,0" VerticalAlignment="Top" Foreground="#FFAEAA84" Background="{x:Null}" FontWeight="Bold" BorderBrush="#FF5F5F5F" BorderThickness="0,0,0,1"/>
    </Grid>
</Window>
